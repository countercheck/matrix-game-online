{
  "name": "mosaic-matrix-game",
  "version": "1.1.0",
  "description": "Web-based implementation of the Mosaic Strict Matrix Game's Action Resolution system",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter server build && pnpm --filter client build",
    "lint": "pnpm --filter \"*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "pnpm --filter \"*\" test",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:generate": "pnpm --filter server db:generate",
    "db:push": "pnpm --filter server db:push",
    "db:studio": "pnpm --filter server db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4",
  "dependencies": {
    "pnpm": "^10.28.2"
  }
}
